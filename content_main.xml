<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.vanh17hanover.firstapp.MainActivity"
    android:background="#ffffff">

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:columnCount="38"
        android:rowCount="47"
        android:background="@drawable/board"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:id="@+id/imageView0"
            android:layout_row="0"
            android:layout_column="15"
            android:onClick="dropIn"
            android:tag="0"/>

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:id="@+id/imageView1"
            android:layout_row="0"
            android:layout_column="32"
            android:layout_marginLeft="35dp"
            android:onClick="dropIn"
            android:tag="1"/>

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:id="@+id/imageView2"
            android:layout_row="0"
            android:layout_column="37"
            android:layout_marginLeft="25dp"
            android:onClick="dropIn"
            android:tag="2"/>

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:id="@+id/imageView3"
            android:layout_row="14"
            android:layout_column="15"
            android:layout_marginTop="35dp"
            android:onClick="dropIn"
            android:tag="3"/>

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:id="@+id/imageView4"
            android:layout_row="14"
            android:layout_column="32"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="35dp"
            android:onClick="dropIn"
            android:tag="4"/>

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:id="@+id/imageView5"
            android:layout_row="14"
            android:layout_column="37"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:onClick="dropIn"
            android:tag="5"/>

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:id="@+id/imageView6"
            android:layout_row="46"
            android:layout_column="15"
            android:onClick="dropIn"
            android:tag="6"/>

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:id="@+id/imageView7"
            android:layout_row="46"
            android:layout_column="32"
            android:layout_marginLeft="35dp"
            android:onClick="dropIn"
            android:tag="7"/>

        <ImageView
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:id="@+id/imageView8"
            android:layout_row="46"
            android:layout_column="37"
            android:layout_marginLeft="25dp"
            android:onClick="dropIn"
            android:tag="8"/>

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playAgainButton"
        android:background="#f1cf0d"
        android:alpha="0.75"
        android:layout_centerInParent="true"
        android:visibility="invisible">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/winnerMessage"
            android:textColor="#f21111"
            android:text="Next Text"
            android:textSize="20dp"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="replay"
            android:id="@+id/button"
            android:onClick="playAgain"
            android:layout_margin="30dp" />
    </LinearLayout>
</RelativeLayout>
